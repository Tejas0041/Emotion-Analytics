<% layout('layout/../boilerplate.ejs') %>

<div class="text-center" style="padding: 3rem 0;">
    <div class="modern-form">
        <div class="text-center mb-4">
            <div style="position: relative; display: inline-block; margin-bottom: 1.5rem;">
                <div class="loading-pulse" style="background: var(--warning-color); width: 80px; height: 80px;"></div>
                <i class="fas fa-user-shield" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); font-size: 2rem; color: white;"></i>
            </div>
            <h1 style="font-size: 2.25rem; font-weight: 700; margin: 0; color: var(--text-primary); margin-bottom: 0.5rem;">Admin Access</h1>
            <p style="color: var(--text-secondary); margin: 0; font-size: 1.1rem;">Secure administrator portal</p>
        </div>

        <form action="/login/admin" method="POST" class="validated-form" novalidate>
            <div class="form-group">
                <label class="form-label" for="username">
                    <i class="fas fa-user-shield"></i> Admin ID
                </label>
                <input class="form-input" type="text" name="username" id="username" autofocus required placeholder="Enter admin ID">
                <div class="invalid-feedback">Please enter admin ID</div>
            </div>

            <div class="form-group">
                <label class="form-label" for="password">
                    <i class="fas fa-key"></i> Password
                </label>
                <input class="form-input" type="password" name="password" id="password" required placeholder="Enter admin password">
                <div class="invalid-feedback">Please enter password</div>
            </div>

            <button type="submit" class="btn-modern btn-primary w-full mb-4" id="adminLoginBtn">
                <i class="fas fa-sign-in-alt"></i> 
                <span>Admin Sign In</span>
            </button>

            <div class="text-center">
                <div style="position: relative; margin: 1.5rem 0;">
                    <div style="position: absolute; top: 50%; left: 0; right: 0; height: 1px; background: var(--border);"></div>
                    <span style="background: var(--background); padding: 0 1rem; color: var(--text-secondary); font-size: 0.9rem;">options</span>
                </div>
                
                <a href="/admin/reset-password" class="btn-modern btn-secondary w-full mb-3">
                    <i class="fas fa-redo"></i> Reset Password
                </a>
                
                <a href="/login" style="color: var(--text-secondary); text-decoration: none; font-weight: 500; display: inline-flex; align-items: center; gap: 0.5rem; justify-content: center;">
                    <i class="fas fa-arrow-left"></i> Back to User Login
                </a>
            </div>
        </form>
    </div>
</div>

<script>
document.querySelector('.validated-form').addEventListener('submit', function(e) {
    const btn = document.getElementById('adminLoginBtn');
    btn.classList.add('loading');
    btn.innerHTML = '<div class="loading"></div> <span>Authenticating...</span>';
});
</script>
